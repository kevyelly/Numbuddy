<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="400dp" android:layout_margin="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/greentexture" android:scaleType="centerCrop"
                android:contentDescription="Background Image" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/results_top_icon"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/settingimg" />

                <TextView
                android:id="@+id/results_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz Complete!"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center_horizontal"
                android:shadowColor="#000000"
                android:shadowRadius="8"/>

                <ImageView
                    android:id="@+id/results_icon_imageview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/stars"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/results_score_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score: 10 / 10"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppinssemibold"
                    android:gravity="center_horizontal"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/results_message_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level Up!"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppinssemibold"
                    android:gravity="center_horizontal"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/results_ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="OK"
                    android:textColor="@color/primarygreen"
                    android:backgroundTint="@color/white" />

            </LinearLayout> </ScrollView> </FrameLayout> </androidx.cardview.widget.CardView>