<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitetexture"
    android:orientation="vertical"
    android:padding="20dp"
    >


<ImageView
        android:id="@+id/bckbutton"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backbutton"
        android:focusable="true"
        android:layout_gravity="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Question"
        android:id="@+id/indexindicator"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/primarygreen"
        android:layout_gravity="center"/>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@color/primarygreen"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="1 + 1 = ?"
        android:id="@+id/question"
        android:gravity="center"
        android:textSize="50sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:id="@+id/choicesGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/choice1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/primarygreen"
                android:text="choice1"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/choice2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/cancelbutton_border"
                android:text="choice2"
                android:textColor="@color/primarygreen"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/choice3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/primarygreen"
                android:text="choice3"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/choice4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/cancelbutton_border"
                android:text="choice4"
                android:textColor="@color/primarygreen"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="184dp"
        android:layout_gravity="center"

        android:src="@drawable/quizbanner" />


</LinearLayout>