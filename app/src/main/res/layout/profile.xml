<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/whitetexture">
    <ImageView
        android:layout_width="165dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:src="@drawable/koalaprofile"
        android:scaleType="fitCenter"
        android:id="@+id/koalaprofile"/>

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="username"
        android:textColor="@color/textgreen"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/koalaprofile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/textgreen"
        android:text="anyone@anywhere.com"
        android:id="@+id/emailadd"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:background="@color/textgreen"
        app:layout_constraintTop_toBottomOf="@id/emailadd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/badgebackground"
        android:scaleType="fitXY"
        android:id="@+id/badgecontainer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/badgetitle"
        app:layout_constraintStart_toStartOf="@id/badgecontainer"
        app:layout_constraintEnd_toEndOf="@id/badgecontainer"
        app:layout_constraintTop_toTopOf="@id/badgecontainer"
        android:text="@string/your_progress"
        android:layout_margin="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medal"
        app:layout_constraintTop_toBottomOf="@id/badgetitle"
        app:layout_constraintEnd_toStartOf="@id/badgetitle"
        android:translationX="35dp"
        android:orientation="vertical"
        android:id="@+id/medal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medal"
            app:layout_constraintEnd_toStartOf="@id/badgetitle"
            app:layout_constraintTop_toBottomOf="@id/badgetitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/medal"
            app:layout_constraintStart_toStartOf="@id/medal"
            app:layout_constraintEnd_toEndOf="@id/medal"
            android:text="Level"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/medal"
            app:layout_constraintStart_toStartOf="@id/medal"
            app:layout_constraintEnd_toEndOf="@id/medal"
            android:text="0"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="18dp"
        android:translationX="-35dp"
        android:id="@+id/stars"
        app:layout_constraintTop_toBottomOf="@id/badgetitle"
        app:layout_constraintStart_toEndOf="@id/badgetitle"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_height="60dp"
            android:src="@drawable/stars" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stars"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="-35dp"
        android:id="@+id/streak"
        app:layout_constraintTop_toBottomOf="@id/medal"
        app:layout_constraintStart_toEndOf="@id/medal"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_height="60dp"
            android:src="@drawable/streak" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 days"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="-45dp"
        android:translationY="18dp"
        android:id="@+id/Stages"
        app:layout_constraintTop_toBottomOf="@id/stars"
        app:layout_constraintStart_toStartOf="@id/stars"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_height="60dp"
            android:src="@drawable/levels" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stages"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 completed"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/primarygreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/profile"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:id="@+id/btnhome"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/settings"
            android:id="@+id/btnsettings"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>